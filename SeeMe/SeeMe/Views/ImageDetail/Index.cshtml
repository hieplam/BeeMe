@model SeeMe.Models.ImageDetailModel

@{
    ViewBag.Title = "Image Detail";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">{{ message }}</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12" id="image-wrapper">
        <div class="col-lg-9 thumb form-group">
            <a class="thumbnail" href="ImageDetail.html">
                <img class="img-responsive" id="testing" src=@Model.ImageUrl alt="">
            </a>
        </div>
        <div class="col-lg-3">
            <div class="row artist form-group">
                @Html.Partial("_ArtistPartial",Model.Artist)
            </div>
            <div class="image-detail">
                <div class="image-title">@Model.Title</div>
                <div class="image-description">
                    @Model.Description
                </div>
            </div>
        </div>
    </div>
</div>