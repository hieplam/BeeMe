<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <nav id="menu" class="navbar navbar-default navbar-fixed-top navbar-custom">
        <a class="navbar-brand" href="~/">Bee Me</a>
        <div class="navbar-header">
            <button class="btn navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"></button>
        </div>
        <div class="container-fluid navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="nav"><a href="">Home</a></li>
                <li class="nav"><a href="">About</a></li>
                <li class="nav"><a href="">Contact</a></li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
</body>
</html>